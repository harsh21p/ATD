<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="50dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/card_curved"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvMarketingPrograms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="Marketing Programs"
        android:fontFamily="@font/arial"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llMarketingPrograms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="Add to Quote"
        android:fontFamily="@font/arial"
        android:textSize="16sp"
        android:textColor="@color/atd_blue"
        app:layout_constraintTop_toBottomOf="@+id/tvMarketingPrograms"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/llMarketingPrograms"
        android:background="@color/dusty_gray">

    </View>
    <TextView
        android:id="@+id/tvClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/close"
        android:textColor="@color/atd_blue"
        android:textSize="16sp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvViewOnAspire"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        ></TextView>
    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tvClose"
        app:layout_constraintBottom_toBottomOf="@+id/tvClose"
        app:layout_constraintStart_toEndOf="@+id/tvClose"
        android:background="@color/dusty_gray">

    </View>

    <TextView
        android:id="@+id/tvViewOnAspire"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/viewOnAspire"
        android:textColor="@color/atd_blue"
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/tvClose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>