<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewDivider"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginBottom="16dp"
        android:background="@color/atd_blue"
        app:layout_constraintBottom_toTopOf="@+id/tvProductSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvProductSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="SEARCH"
        android:gravity="center"
        android:padding="10dp"
        android:enabled="false"
        android:background="@drawable/nextbuttoncorners"
        android:backgroundTint="@color/disable_background"
        android:fontFamily="@font/arial"
        android:textStyle="bold"
        android:textColor="@color/disableText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btReset"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/btReset"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="RESET"
        android:gravity="center"
        android:padding="10dp"
        android:enabled="false"
        android:textColor="@color/disableText"
        android:fontFamily="@font/arial"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvProductSearch"
        />

</androidx.constraintlayout.widget.ConstraintLayout>