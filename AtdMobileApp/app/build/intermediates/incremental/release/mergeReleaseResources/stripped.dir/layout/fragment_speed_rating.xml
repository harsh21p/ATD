                android:text="@string/w_168mph_270kmh"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/cb19"
                app:layout_constraintTop_toBottomOf="@+id/cb19" />

            <CheckBox
                android:id="@+id/cb21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:text="@string/y_186mph_300kmh"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/cb20"
                app:layout_constraintTop_toBottomOf="@+id/cb20" />

            <CheckBox
                android:id="@+id/cb22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:text="@string/y_186_mph_300_kmh"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/cb21"
                app:layout_constraintTop_toBottomOf="@+id/cb21" />


        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llBrandsFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/viewDivider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/atd_blue"
            app:layout_constraintBottom_toTopOf="@+id/speedRatingapply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="12dp"
            />

        <!-- Apply button -->
        <TextView
            android:id="@+id/speedRatingapply"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_marginHorizontal="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/carved_background_24"
            android:backgroundTint="@color/atd_blue"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </TextView>





    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>