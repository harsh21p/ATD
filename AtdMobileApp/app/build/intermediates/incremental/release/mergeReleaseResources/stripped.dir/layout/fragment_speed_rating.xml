                app:layout_constraintStart_toStartOf="@+id/cb18"
                app:layout_constraintTop_toBottomOf="@+id/cb18" />

            <CheckBox
                android:id="@+id/cb20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
