<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/white">

    <TextView
        android:id="@+id/cartAddedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:textSize="17sp"
        android:gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/baltic_sea"
        android:text="@string/product_successfully_added_to_your_cart"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/lightgreay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartAddedMessage"
        android:background="@drawable/header_line"></View>
    <TextView
        android:id="@+id/continueShopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"
        android:padding="10dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/atd_blue"
        android:text="@string/continue_shoping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

    </TextView>

    <TextView
        android:id="@+id/checkoutNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:background="@color/atd_blue"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:text="@string/checkout_now"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/continueShopping"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
