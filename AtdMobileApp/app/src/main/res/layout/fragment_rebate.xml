<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.vin.VINFragment">

    <TextView
        android:id="@+id/tvFrontTire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/front_tire_size"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:imeOptions="actionDone"
        android:imeActionLabel="Enter"
        android:inputType="text"
        android:id="@+id/etFrontTire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textSize="14sp"
        android:paddingRight="40dp"
        android:paddingLeft="10dp"
        android:layout_marginHorizontal="10dp"
        android:hint="@string/ft_eg"
        android:text=""
        android:backgroundTint="@color/atd_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFrontTire"
        ></EditText>



    <TextView
        android:id="@+id/tvRearTire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etFrontTire"
        android:text="@string/rear_tire_size_optional"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:imeOptions="actionDone"
        android:imeActionLabel="Enter"
        android:inputType="text"
        android:id="@+id/etRearTire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial"
        android:textSize="14sp"
        android:paddingRight="40dp"
        android:paddingLeft="10dp"
        android:layout_marginHorizontal="10dp"
        android:hint="@string/ft_eg"
        android:text=""
        android:backgroundTint="@color/atd_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRearTire"
        ></EditText>


    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:indeterminateDrawable="@drawable/progress_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </ProgressBar>

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:textAllCaps="true"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/disable_background"
        android:textColor="@color/disableText"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>