<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/tvCnfNum"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:text="cnf"
        android:textColor="@color/atd_blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/orderStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no status"
        android:drawablePadding="5dp"
        android:padding="10dp"
        style="@font/arial"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvCnfNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCnfNum"
        app:layout_constraintBottom_toBottomOf="@+id/tvCnfNum"/>

    <TextView
        android:id="@+id/orderNum"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.45"
        android:layout_height="wrap_content"
        android:text="open"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:fontFamily="@font/arial"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/datePlaced"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCnfNum"

        />

    <TextView
        android:id="@+id/datePlaced"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="wrap_content"
        android:text="open"
        android:layout_marginTop="7dp"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:fontFamily="@font/arial"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="end"
        app:layout_constraintStart_toEndOf="@+id/orderNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orderNum"
        app:layout_constraintBottom_toBottomOf="@+id/orderNum" />


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
