<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AtdMobileApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/atd_blue</item>
        <item name="colorPrimaryVariant">@color/atd_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/atd_blue</item>
        <item name="colorSecondaryVariant">@color/atd_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="AtdMobileApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AtdMobileApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AtdMobileApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="location_12">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2E2D31</item>
    </style>

    <style name="text_label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6F6F6F</item>
    </style>

    <style name="CheckboxStyle">
        <item name="colorAccent">@color/atd_blue</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/atd_blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <style name="FilledBoxEndIconTint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/atd_blue</item>
    </style>

    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="FullDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>

    </style>

    <style name="TextView" parent="@android:style/TextAppearance.Widget.TextView">

        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:drawableBottom">@drawable/horizontalline</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableTint">@color/atd_blue</item>
    </style>

    <style name="TextViewLabel" parent="@android:style/TextAppearance.Widget.TextView">

        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/textview_label</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="HalfTextView" parent="@android:style/TextAppearance.Widget.TextView">

        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:drawableBottom">@drawable/horizontalline</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableTint">@color/atd_blue</item>
    </style>

    <style name="HighlightedDateStyle">
        <item name="android:textColor">@color/black</item> <!-- Set the text color to white -->
        <item name="android:background">@color/highlighted_color</item> <!-- Set the background color -->
    </style>


    <style name="DialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@drawable/dialog_border</item>
    </style>
</resources>